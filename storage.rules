rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default rule - allow authenticated users to read
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // User profile images
    match /profile-images/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Event images (regular events)
    match /event-images/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // ESN event images (ESN admins only)
    match /esn-events/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
